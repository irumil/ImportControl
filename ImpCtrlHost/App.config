<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <system.web>
    <compilation debug="true" />
  </system.web>
  <system.serviceModel>
    <bindings>
      <netTcpBinding>
        <binding name="netImpCtrlServicesBinding">
                 <security mode="None" />
        </binding>
      </netTcpBinding>
    </bindings>

    <services>
      <service name="ImpCtrlWcfService.ImpStatusService"
               behaviorConfiguration="MyServiceTypeBehaviors">

        <endpoint address="ImpCtrlSvc"
                  binding="netTcpBinding"
                  bindingConfiguration ="netImpCtrlServicesBinding"
                  contract="ImpCtrlWcfService.IImpStatusService" />
        
        <host>
          <baseAddresses>
            <add baseAddress = "http://localhost:8737"/>
            <add baseAddress= "net.tcp://localhost:8738"/>
          </baseAddresses>
        </host>
        

      </service>

    </services>

    <behaviors>
      <serviceBehaviors>

        <behavior name="MyServiceTypeBehaviors">
          <serviceMetadata httpGetEnabled="True" />
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>

      </serviceBehaviors>
    </behaviors>

  </system.serviceModel>
  
</configuration>